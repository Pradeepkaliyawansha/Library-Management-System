{
  "name": "library-management-system",
  "version": "1.0.0",
  "description": "University Library Management System",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64",
    "publish": "electron-builder --win --x64 --publish always"
  },
  "keywords": [
    "library",
    "management",
    "university"
  ],
  "author": "Pradeep Kaliyawansha",
  "license": "MIT",
  "dependencies": {
    "exceljs": "^4.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sql.js": "^1.8.0"
  },
  "build": {
    "appId": "com.university.library",
    "productName": "Library Management System",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "src/**/*",
      "database.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "electron-updater": "^6.7.3"
  }
}
